{
  "name": "@vkontakte/vk-connect-promise",
  "version": "1.0.0-beta.0",
  "description": "A package for integrating VK Mini Apps with official VK clients for iOS, Android and Web with events based on promises",
  "main": "dist/index.js",
  "browser": "dist/index.umd.js",
  "umdName": "vkConnectPromise",
  "type": "dist/types/index.d.ts",
  "scripts": {
    "watch": "rollup -c -w",
    "build": "rimraf dist && NODE_ENV=production rollup -c",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "build",
    "src"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.24.2",
    "rollup-plugin-uglify": "^6.0.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VKCOM/vk-connect-promise.git"
  },
  "keywords": [
    "vk",
    "vk-connect",
    "vk-connect-promise",
    "vkui-connect",
    "promise"
  ],
  "author": "Gleb Vorontsov <vorontsov.gleb@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@vkontakte/vk-connect": "1.5.6-beta.13-promise"
  }
